package com.specs;

import com.interfaces.Engine;

//@Component("V6Engine")
public class EngineType implements Engine {

	String type;

	public EngineType() {					// default constructor
		type = "Unknown";
	}

	public EngineType(String type) {		//param constructor

		this.type = type;
	}

	@Override
	public String type() {

		return type;
	}

}

// we have a ability to set the value of the type using the param constructor whenever we needs else we will go with the default constructor
